package com.gmail.gunkophots;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Input the high of rectangle and press Enter");
		int h = sc.nextInt();
		System.out.println("Input the wigh of rectangle and press Enter");
		int w = sc.nextInt();
		rectangle(h, w);
	}

	public static void rectangle(int h, int w) {
		for (int i = 1; i <= h; i++) {
			if (i == 1 || i == h) {
				for (int j = 1; j <= w; j++) {
					System.out.print("*");
				}
			} else {
				for (int j = 1; j <= w; j++) {
					if (j == 1 || j == w) {
						System.out.print("*");
					} else {
						System.out.print(" ");
					}
				}
			}
			System.out.println();
		}
	}
}
