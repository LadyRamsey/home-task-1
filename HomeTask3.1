package com.gmail.gunkophotos;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		System.out.println("Input number of rows");
		int w;
		w = sc.nextInt();

		int h;
		h = 7;

		for (int i = 1; i <= h; i++) {
			if (i % 2 == 0) {
				System.out.println();
			} else {
				for (int j = 1; j <= w; j++) {
					if (j % 2 == 0) {
						System.out.print("+++");
					} else {
						System.out.print("***");
					}
				}
			}
		}
	}
}
