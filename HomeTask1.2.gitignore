package com.gmail.gunkophotos;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner ss = new Scanner(System.in);
		
		System.out.println("Enter the size of side A (cm)");
		double a;
		a = ss.nextInt();
		
		System.out.println("Enter the size of side B (cm)");
		double b;
		b = ss.nextInt();
		
		System.out.println("Enter the size of side C (cm)");
		int c;
		c = ss.nextInt();
		
		double p = (a + b + c) / 2;
		double squ = Math.sqrt(p * (p - a) * (p - b) * (p - c));
		
		System.out.println("Area of triangle is " + squ + " cm");

	}

}
